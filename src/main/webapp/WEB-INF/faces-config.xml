<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
  version="2.0">

  <application>
    <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
   </application>

  <validator>
    <validator-id>com.numbrcrunchr.web.EmailValidator</validator-id>
    <validator-class>com.numbrcrunchr.web.EmailValidator</validator-class>
  </validator>
  <converter>
    <converter-id>currencyConverter</converter-id>
    <converter-class>com.numbrcrunchr.web.CurrencyConverter</converter-class>
  </converter>
  <converter>
    <converter-id>percentageConverter</converter-id>
    <converter-class>com.numbrcrunchr.web.PercentageConverter</converter-class>
  </converter>
</faces-config>